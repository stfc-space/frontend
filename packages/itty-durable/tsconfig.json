{
  "compilerOptions": {
    /* Projects */
    "baseUrl": "src",
    "outDir": "dist",
    /* Language and Environment */
    "target": "es2021",
    "lib": [
      "es2021"
    ],
    /* Modules */
    "module": "esnext",
    "moduleResolution": "node",
    "types": [
      "@cloudflare/workers-types"
    ],
    "resolveJsonModule": true,
    /* JavaScript Support */
    "allowJs": false,
    "checkJs": false,
    /* Emit */
    "noEmit": false,
    "declaration": true,
    "emitDeclarationOnly": true,
    /* Interop Constraints */
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    /* Type Checking */
    "strict": true,
    "skipLibCheck": false,
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "src"
  ],
}